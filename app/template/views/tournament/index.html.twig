                                    <li class="team team-bottom" data-wrestler-id="{{ wrestlers[16 + (i * 2 + 1)].wrestler_id }}">{{ wrestlers[16 + (i * 2 + 1)].name }}<span class="score"></span></li>
                                </ul>
                            {% endfor %}
                        {% endif %}
                     </div>  
                 </div>
            </div>
        </section>
    </div>

    <!-- Game Control Center -->
    <div class="container mx-auto">
        <div id="game-controls" class="game-controls">
            <button id="start-tournament-btn" class="btn-success">Start Tournament (1 Gold)</button>
            <button id="submit-picks-btn" class="btn-info" style="display: none;">Submit Round 1 Picks</button>
        </div>
    </div>

    <!-- Simple Modal for results -->
    <div id="result-modal" class="modal-overlay" style="display: none;">
        <div class="modal-content w-full bg-gray-900 border-violet-500">
            <h3 id="modal-title" class="text-lg">Incorrect Pick!</h3>
            <p id="modal-message">You made one or more incorrect picks. You can still advance to Round 2 by purchasing a bye for 3 Gold; or simply click in Quit Tournament to end the tournament and exit.</p>
            <div id="modal-actions" class="mt-6">
                <button id="pay-continue-btn" class="btn-success">Pay 3 Gold to Continue</button>
                <button id="quit-tournament-btn" class="btn-error">Quit Tournament</button>
            </div>
        </div>
