<div class="outer flex flex-col w-full">
    <div class="hero w-full bg-gray-800">
        <div class="hero-wrap">
            <p class="intro" id="intro">32 Man</p>
            <h1 id="headline">Tournament</h1>
            <p class="year"><i class="fa fa-star"></i> {{ event_name }} <i class="fa fa-star"></i></p>
            <p>{{ event_slogan }}</p>
        </div>
    </div>
    <div id="bracket-container" class="bracket-container locked">
        <section id="bracket">
            <div class="container mx-auto">
                <div class="split split-one">
                    <div class="round round-1 current">
                        <div class="round-details">Round 1<br/><span class="date"></span></div>
                         {% if wrestlers|length >= 16 %}
                            {% for i in 0..7 %}
                                <ul class="matchup" data-match-id="{{ i }}">
                                     <li class="team team-top" data-wrestler-id="{{ wrestlers[i * 2].wrestler_id }}">{{ wrestlers[i * 2].name }}<span class="score"></span></li>
                                    <li class="team team-bottom" data-wrestler-id="{{ wrestlers[i * 2 + 1].wrestler_id }}">{{ wrestlers[i * 2 + 1].name }}<span class="score"></span></li>
                                 </ul>
                            {% endfor %}
                        {% endif %}
                    </div>  
                    <div class="round round-2">
                        <div class="round-details">Round 2<br/><span class="date"></span></div>
                        {% for i in 0..3 %}
                         <ul class="matchup">
                            <li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
                            <li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
                        </ul>
                         {% endfor %}
                    </div>  
                    <div class="round round-3">
                         <div class="round-details">Round 3<br/><span class="date"></span></div>
                        {% for i in 0..1 %}
                        <ul class="matchup">
                            <li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
                            <li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
                        </ul>
                        {% endfor %}
                     </div>  
                     <div class="round round-4">
                        <div class="round-details">Semi-Finals<br/><span class="date"></span></div>
                        <ul class="matchup">
                            <li class="team team-top">&nbsp;<span class="score">&nbsp;</span></li>
                            <li class="team team-bottom">&nbsp;<span class="score">&nbsp;</span></li>
                        </ul>
                     </div>  
                 </div>

                <div class="champion">
                    <div class="final">
                        <image src="{{ base_url }}public/media/images/trophy.png" class="h-32 m-auto">
                         <div class="round-details">Championship</div>
                        <ul class ="matchup championship">
                            <li class="team team-top">&nbsp;<span class="vote-count">&nbsp;</span></li>
                             <li class="team team-bottom">&nbsp;<span class="vote-count">&nbsp;</span></li>
                        </ul>
                    </div>
                </div>

                <div class="split split-two">
                      <div class="round round-4">
                        <div class="round-details">Semi-Finals<br/><span class="date"></span></div>
                        <ul class="matchup">
