{% extends "base.html.twig" %}

{% block title %}Hire a Manager{% endblock %}

{% block content %}
<div class="container mx-auto p-4">
    <header class="text-center my-8">
        <h1 class="text-5xl font-bold text-yellow-400">Hire a Manager</h1>
        <p class="text-xl text-gray-300">Invest in a legend to guide your career to new heights.</p>
        <a href="{{ base_url }}app/career" class="text-blue-400 hover:text-blue-600 mt-4 inline-block">&larr; Back to Career</a>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for manager in managers %}
            <div class="bg-gray-900 rounded-lg shadow-lg overflow-hidden flex flex-col h-[32rem]">
                <img src="{{ base_url }}public/media/images/managers/{{ manager.image }}.webp" alt="{{ manager.name }}" class="w-full h-64 object-cover object-top">
                <div class="p-6 flex flex-col flex-grow">
                    <h2 class="text-2xl font-bold text-yellow-400 mb-2">{{ manager.name }}</h2>
                    <p class="text-gray-400 text-sm mb-4 flex-grow h-64 overflow-y-auto">{{ manager.description }}</p>
                    
                    <div class="bg-gray-700 p-4 rounded-md mb-4">
                        <h3 class="text-lg font-semibold text-white mb-3">Bonuses & Requirements</h3>
                        <div class="grid grid-cols-2 gap-x-4 gap-y-2 text-sm">
                            <p>XP Boost: <span class="font-bold text-green-400">+{{ manager.xp_bonus * 100 }}%</span></p>
                            <p>Gold Boost: <span class="font-bold text-green-400">+{{ manager.gold_bonus * 100 }}%</span></p>
                            <p>Strength: <span class="font-bold text-blue-400">+{{ manager.strength_bonus }}</span></p>
                            <p>Brawling: <span class="font-bold text-blue-400">+{{ manager.brawlingAbility_bonus }}</span></p>
                            <p>Technical: <span class="font-bold text-blue-400">+{{ manager.technicalAbility_bonus }}</span></p>
                            <p>Aerial: <span class="font-bold text-blue-400">+{{ manager.aerialAbility_bonus }}</span></p>
                            <p>Stamina: <span class="font-bold text-blue-400">+{{ manager.stamina_bonus }}</span></p>
                            <p>Toughness: <span class="font-bold text-blue-400">+{{ manager.toughness_bonus }}</span></p>
                            <p class="col-span-2">Level Req: <span class="font-bold text-gray-300">{{ manager.level_requirement }}</span></p>
                        </div>
                    </div>

                    {% if prospect.lvl >= manager.level_requirement %}
                        <button 
                            class="hire-btn w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-md transition duration-300 mt-auto" 
                            data-manager-id="{{ manager.id }}"
                            data-cost="{{ manager.cost }}">
                            Hire for ${{ manager.cost }}
                        </button>
                    {% else %}
                        <button class="w-full bg-gray-600 text-gray-400 font-bold py-3 px-4 rounded-md mt-auto" disabled>
                            Requires Level {{ manager.level_requirement }}
                        </button>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<script>
    // This script is now more robust. It updates the UI without a page reload.
    document.querySelectorAll('.hire-btn').forEach(button => {
        button.addEventListener('click', async (e) => {
            const managerId = e.target.dataset.managerId;
            const cost = parseInt(e.target.dataset.cost, 10);

            // Using a custom modal instead of confirm() for better UX
            if (!await showConfirmation(`Are you sure you want to hire this manager for ${cost} Gold?`)) {
                return;
            }

            try {
                const response = await fetch(`{{ base_url }}manager/purchase/${managerId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    showNotification(result.message, 'success');
                    
                    // Update the navbar gold display directly!
                    updateGoldDisplay(result.newGold);

                    // Optionally, disable the button after purchase
                    e.target.textContent = 'Hired!';
                    e.target.disabled = true;
                    e.target.classList.add('bg-gray-500', 'cursor-not-allowed');
                    e.target.classList.remove('bg-green-600', 'hover:bg-green-700');

                } else {
                    showNotification('Error: ' + (result.error || 'Could not hire manager.'), 'error');
                }
            } catch (error) {
                console.error('Failed to hire manager:', error);
                showNotification('An error occurred. Please try again.', 'error');
            }
        });
    });
</script>
{% endblock %}
