{% extends "base.html.twig" %}

{% block title %}Booker Mode{% endblock %}

{% block content %}
<header class="text-center my-8">
            <h1 class="text-5xl font-bold text-yellow-400">Booking Office</h1>
            <p class="text-xl text-gray-300">Manage your promotion, book shows, and become a legend.</p>
        </header>

        <!-- Promoter Stats -->
        <section id="promoter-stats" class="bg-gray-800 p-6 rounded-lg shadow-lg mb-8 flex justify-around items-center">
            <div>
                <h2 class="text-2xl font-semibold text-yellow-400">Current Money</h2>
                <p id="currentMoney" class="text-3xl font-bold text-green-400">$20000.00</p>
            </div>
            <div>
                <h2 class="text-2xl font-semibold text-yellow-400">Roster Size</h2>
                <p id="currentRosterSize" class="text-3xl font-bold">10 / 10 (min)</p>
            </div>
            <button id="openFreeAgencyModalBtn" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                Sign Free Agents
            </button>
        </section>

        <!-- PPV Booking Section -->
        <main id="ppv-booking" class="bg-gray-800 p-6 rounded-lg shadow-lg">
            <div class="flex flex-col md:flex-row gap-8">

                <!-- Left Column: Roster & Event Details -->
                <div class="w-full md:w-1/3">
                    <h2 class="text-3xl font-bold text-yellow-400 mb-4">Your Roster</h2>
                    <div id="wrestlerRoster" class="grid grid-cols-1 sm:grid-cols-2 gap-4 h-[40rem] overflow-y-auto p-2 bg-gray-700 rounded-lg">
                        <!-- Wrestler cards will be injected by JS -->
                    </div>

                    <h2 class="text-3xl font-bold text-yellow-400 mt-8 mb-4">Event Details</h2>
                    <div class="space-y-4">
                        <div>
                            <label for="ppvName" class="block text-lg font-semibold mb-2">PPV Event Name</label>
                            <input type="text" id="ppvName" class="w-full bg-gray-700 text-white p-2 rounded-lg border-2 border-gray-600 focus:border-yellow-500 focus:outline-none" placeholder="e.g., WrestleFest IX">
                        </div>
                        <div>
                            <label for="venueSelect" class="block text-lg font-semibold mb-2">Select Venue</label>
                            <select id="venueSelect" class="w-full bg-gray-700 text-white p-2 rounded-lg border-2 border-gray-600 focus:border-yellow-500 focus:outline-none">
                                <!-- Venues will be populated by JS -->
                            </select>
                            <p id="venueDetails" class="text-sm text-gray-400 mt-2"></p>
                        </div>
                        <div>
                            <label for="advertisingSpend" class="block text-lg font-semibold mb-2">Advertising Budget: $<span id="advertisingValue">0</span></label>
                            <input type="range" id="advertisingSpend" min="0" max="10000" step="100" value="0" class="w-full h-2 bg-gray-700 rounded-lg appearance-none cursor-pointer">
                        </div>
                    </div>
                </div>

                <!-- Right Column: Match Card -->
                <div class="w-full md:w-2/3">
                    <h2 class="text-3xl font-bold text-yellow-400 mb-4">Book The Card</h2>
                    <div id="matchSlotsContainer" class="space-y-6">
                        <!-- JS will populate this with 4 matches + 1 main event initially -->
                    </div>
                    <div class="mt-6 flex justify-center">
                        <button id="addMatchBtn" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                            + Add Another Match
                        </button>
                    </div>
                    <div class="mt-8 flex justify-end gap-4">
                        <button id="resetPpvBtn" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">Reset Card</button>
                        <button id="bookPpvBtn" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">Book The PPV!</button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Match Card Template (for JS cloning) -->
    <template id="matchCardTemplate">
        <div class="match-card bg-gray-700 p-4 rounded-lg" data-match-id="">
            <div class="flex justify-between items-center mb-2">
                <h3 class="match-title text-2xl font-semibold"></h3>
                <div class="match-type-toggle flex rounded-lg p-1 bg-gray-600">
                    <button class="match-toggle-btn singles-btn active text-sm font-semibold py-1 px-3 rounded-md" data-type="singles">Singles</button>
                    <button class="match-toggle-btn tag-btn text-sm font-semibold py-1 px-3 rounded-md" data-type="tag">Tag Team</button>
                </div>
            </div>
            <div class="match-content">
                <!-- Drop zones will be injected here by JS -->
            </div>
        </div>
    </template>

    <!-- Free Agency Modal -->
    <div id="freeAgencyModal" class="modal hidden fixed inset-0 z-50 flex items-center justify-center">
        <div class="modal-content bg-gray-800 p-8 rounded-lg shadow-xl w-11/12 md:w-3/4 lg:w-2/3 relative border-2 border-yellow-500">
            <span class="close-button absolute top-2 right-4 text-3xl font-bold cursor-pointer hover:text-yellow-400">&times;</span>
            <h2 class="text-3xl font-bold text-yellow-400 mb-4">Free Agents</h2>
            <p class="text-gray-300 mb-4">Sign wrestlers to build your roster. Your current roster size is <span id="currentRosterSizeModal">10</span>/20.</p>
            <div id="freeAgentList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 h-96 overflow-y-auto p-2 bg-gray-900 rounded-lg">
                <!-- Free agent cards will be injected by JS -->
            </div>
        </div>
    </div>

    <!-- PPV Log Modal -->
    <div id="ppvLogModal" class="modal hidden fixed inset-0 z-50 flex items-center justify-center">
        <div class="modal-content bg-gray-800 p-8 rounded-lg shadow-xl w-11/12 md:w-2/3 relative border-2 border-yellow-500">
            <span class="close-button absolute top-2 right-4 text-3xl font-bold cursor-pointer hover:text-yellow-400">&times;</span>
            <div id="ppvLog" class="text-left max-h-96 overflow-y-auto">
                <!-- PPV results will be injected here -->
            </div>
        </div>
    </div>
{% endblock %}